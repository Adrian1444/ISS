<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.bibllioteca.biblioteca.domain.User"
           table="users">

        <id name="id" column="id" type="int">
            <generator class="increment"/>
        </id>

        <property
                name="firstName"
                column="first_name"  type="java.lang.String"/>

        <property
                name="lastName"
                column="last_name"  type="java.lang.String"/>

        <property
                name="phone"
                column="phone"  type="java.lang.String"/>

        <property
                name="address"
                column="address"  type="java.lang.String"/>

        <property
                name="cnp"
                column="cnp"  type="java.lang.String"/>

    </class>
</hibernate-mapping>

